import React, { useState } from "react";

export default function AppCounter() {
  const [score, setScore] = useState(0);

  return (
    <div>
      <h1>Score Counter</h1>
      <button onClick={() => setScore(score + 1)}>Add</button>
      <span>{score}</span>
      <button onClick={() => setScore(score - 1)}>Subtract</button>
    </div>
  );
}

